<?xml version="1.0" encoding="utf-8"?>
<!-- Create a scrim gradient rectangle that can go over the poster image to show text on top -->
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <gradient
        android:angle="-90"
        android:startColor="@color/black_transparent"
        android:centerColor="@color/black_transparent"
        android:endColor="@color/black_mid_opaque"
        android:type="linear"/>

</shape>